<% title = 'Home' %>

<%- include('partials/header') %>

<article>
  <h1>Recipes</h1>
</article>

<div class="recipes-container" id="contacts"></div>
<div id="contactModal" class="modal hidden">
  <div class="modal-content full-width">
    <span class="close-button">&times;</span>
    <h2 id="modalTitle">Add New Recipe</h2>
    <form id="contactForm" class="recipe-form">
      <div class="form-group">
        <label for="dishName">Dish Name</label>
        <input type="text" id="dishName" name="dishName" required>
      </div>
      
      <div class="form-group">
        <label for="chefName">Chef Name</label>
        <input type="text" id="chefName" name="chefName" required>
      </div>
      
      <div class="form-group">
        <label for="calories">Calories</label>
        <input type="number" id="calories" name="calories" required>
      </div>
      
      <div class="form-group">
        <label for="bakingTime">Baking Time</label>
        <input type="text" id="bakingTime" name="bakingTime" required>
      </div>
      
      <div class="form-group">
        <label for="countryOfOrigin">Country of Origin</label>
        <input type="text" id="countryOfOrigin" name="countryOfOrigin" required>
      </div>
      
      <div class="form-group">
        <label for="ingredients">Ingredients (comma separated)</label>
        <input type="text" id="ingredients" name="ingredients" required>
      </div>
      
      <div class="form-group full-width">
        <label for="instructions">Instructions</label>
        <textarea id="instructions" name="instructions" required></textarea>
      </div>
      
      <button type="submit" class="save-btn">Save Recipe</button>
    </form>
  </div>
</div>
</div>