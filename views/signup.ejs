<% title = 'Sign Up' %>

<div class="login-container">
  <h2>Create Account</h2>
  <form action="/signup" method="POST" class="login-form">
    <input type="text" name="username" placeholder="Username" required>
    <input type="password" name="password" placeholder="Password" required>
    <input type="email" name="email" placeholder="Email" required>
    <input type="date" name="birthdate" required>

    <button type="submit" class="auth-btn">Sign Up</button>
    
    <div class="auth-links">
      <a href="/login" class="auth-btn" style="background-color: transparent; border: 1px solid #fff;">Already have an account? Login</a>
    </div>
  </form>

  <div class="oauth-section">
    <div class="divider">or</div>
    
    <a href="/auth/github" class="auth-btn github-btn">
      Sign in with GitHub
    </a>
  </div>
</div>
